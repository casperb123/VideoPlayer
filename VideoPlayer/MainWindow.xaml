<Window x:Class="VideoPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoPlayer"
        xmlns:ffme="clr-namespace:Unosquare.FFME;assembly=ffme.win"
        mc:Ignorable="d"
        Title="Video Player"
        Height="450"
        Width="800"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <ffme:MediaElement x:Name="player"
                           Grid.Row="0"
                           LoadedBehavior="Play"
                           UnloadedBehavior="Manual"
                           ScrubbingEnabled="True"
                           Background="Gray"
                           MediaEnded="player_MediaEnded"
                           MediaOpened="player_MediaOpened" />

        <StackPanel HorizontalAlignment="Center"
                    Grid.Row="2"
                    Orientation="Horizontal"
                    Margin="0,0,0,10">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin"
                            Value="5,0,5,0" />
                </Style>
            </StackPanel.Resources>

            <Button x:Name="buttonPlayPause"
                    Content="Play"
                    Width="50"
                    Height="30"
                    IsEnabled="False"
                    Click="buttonPlayPause_Click" />
            <Button x:Name="buttonOpen"
                    Content="Open"
                    Width="50"
                    Height="30"
                    Click="buttonOpen_Click" />
        </StackPanel>

        <Grid Grid.Row="1"
              Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding ElementName=sliderProgress, Path=Value, StringFormat=0:00}"
                       VerticalAlignment="Center"/>
            <Slider x:Name="sliderProgress"
                    Margin="2"
                    Grid.Column="0"
                    Grid.Row="1"
                    VerticalAlignment="Bottom"
                    PreviewMouseLeftButtonDown="sliderProgress_PreviewMouseLeftButtonDown"
                    PreviewMouseLeftButtonUp="sliderProgress_PreviewMouseLeftButtonUp"
                    ValueChanged="sliderProgress_ValueChanged"/>

            <TextBlock Text="Volume"
                       TextAlignment="Center"
                       Grid.Column="1"
                       VerticalAlignment="Center"/>
            <Slider x:Name="sliderVolume"
                    Grid.Column="1"
                    Grid.Row="1"
                    Minimum="0"
                    Maximum="1"
                    Value="{Binding ElementName=player, Path=Volume, Mode=TwoWay}"/>
        </Grid>
    </Grid>
</Window>
