<UserControl x:Class="VideoPlayer.UserControls.MediaPlayerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VideoPlayer.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="535"
             d:DesignWidth="800">

    <UserControl.CommandBindings>
        <CommandBinding Command="{x:Static local:MediaPlayerUserControl.PlayPauseCmd}"
                        CanExecute="PlayPauseCanExecute"
                        Executed="PlayPauseExecuted" />
        <CommandBinding Command="{x:Static local:MediaPlayerUserControl.SkipForwardCmd}"
                        CanExecute="SkipForwardCanExecute"
                        Executed="SkipForwardExecuted" />
        <CommandBinding Command="{x:Static local:MediaPlayerUserControl.SkipBackwardCmd}"
                        CanExecute="SkipBackwardCanExecute"
                        Executed="SkipBackwardExecuted" />
    </UserControl.CommandBindings>

    <UserControl.InputBindings>
        <KeyBinding Command="{x:Static local:MediaPlayerUserControl.PlayPauseCmd}"
                    Key="Space" />
        <KeyBinding Command="{x:Static local:MediaPlayerUserControl.SkipForwardCmd}"
                    Key="Right" />
        <KeyBinding Command="{x:Static local:MediaPlayerUserControl.SkipBackwardCmd}"
                    Key="Left" />
    </UserControl.InputBindings>

    <UserControl.Resources>
        <Style x:Key="ImageButton"
               TargetType="Button">
            <Setter Property="OverridesDefaultStyle"
                    Value="True"/>
            <Setter Property="Margin"
                    Value="5,10,5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border"
                                BorderThickness="0"
                                Background="Transparent"
                                Width="40"
                                Height="40"
                                Cursor="Hand">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed"
                                     Value="true">
                                <Setter Property="Cursor"
                                        Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid x:Name="mediaElementBackground">
            <MediaElement x:Name="player"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Manual"
                      ScrubbingEnabled="True"
                      Volume="1"
                      MediaEnded="Player_MediaEnded"
                      MediaOpened="Player_MediaOpened" />
        </Grid>

        <StackPanel HorizontalAlignment="Center"
                    Grid.Row="2"
                    Orientation="Horizontal">

            <Button x:Name="buttonPlayPause"
                    Style="{StaticResource ImageButton}"
                    IsEnabled="False"
                    Click="ButtonPlayPause_Click">
                <Image x:Name="imagePlayPause" />
            </Button>
            <Button x:Name="buttonStop"
                    Style="{StaticResource ImageButton}"
                    IsEnabled="False"
                    Click="ButtonStop_Click">
                <Image x:Name="imageStop" />
            </Button>
            <Button x:Name="buttonOpen"
                    Style="{StaticResource ImageButton}"
                    Click="ButtonOpen_Click">
                <Image x:Name="imageOpen" />
            </Button>
        </StackPanel>

        <Button x:Name="buttonMuteUnmute"
                Style="{StaticResource ImageButton}"
                Grid.Row="2"
                Margin="0,10,10,0"
                HorizontalAlignment="Right"
                Click="ButtonMuteUnmute_Click">
            <Image x:Name="imageMuteUnmute" />
        </Button>

        <Grid Grid.Row="1"
              Margin="10,5,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <TextBlock x:Name="textBlockDuration"
                       Text="0:00 / 0:00"
                       VerticalAlignment="Center" />
            <Slider x:Name="sliderProgress"
                    Grid.Column="0"
                    Grid.Row="1"
                    IsMoveToPointEnabled="True"
                    ValueChanged="SliderProgress_ValueChanged"
                    PreviewMouseLeftButtonDown="SliderProgress_PreviewMouseLeftButtonDown"
                    PreviewMouseLeftButtonUp="SliderProgress_PreviewMouseLeftButtonUp" />

            <TextBlock Text="Volume"
                       TextAlignment="Center"
                       Grid.Column="1"
                       VerticalAlignment="Center" />
            <Slider x:Name="sliderVolume"
                    Grid.Column="1"
                    Grid.Row="1"
                    Minimum="0"
                    Maximum="1"
                    Value="1"
                    IsMoveToPointEnabled="True"
                    PreviewMouseLeftButtonDown="SliderVolume_PreviewMouseLeftButtonDown"
                    PreviewMouseLeftButtonUp="SliderVolume_PreviewMouseLeftButtonUp"
                    ValueChanged="SliderVolume_ValueChanged"/>
        </Grid>
    </Grid>
</UserControl>
