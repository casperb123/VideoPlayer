<UserControl x:Class="VideoPlayer.UserControls.MediaPlayerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VideoPlayer.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="535"
             d:DesignWidth="800"
             UseLayoutRounding="True"
             RenderOptions.BitmapScalingMode="HighQuality">
    <UserControl.CommandBindings>
        <CommandBinding Command="{x:Static local:MediaPlayerUserControl.PlayPauseCmd}"
                        CanExecute="CommandCanExecute"
                        Executed="PlayPauseExecuted" />
        <CommandBinding Command="{x:Static local:MediaPlayerUserControl.SkipForwardCmd}"
                        CanExecute="CommandCanExecute"
                        Executed="SkipForwardExecuted" />
        <CommandBinding Command="{x:Static local:MediaPlayerUserControl.SkipBackwardCmd}"
                        CanExecute="CommandCanExecute"
                        Executed="SkipBackwardExecuted" />
    </UserControl.CommandBindings>

    <UserControl.InputBindings>
        <KeyBinding Command="{x:Static local:MediaPlayerUserControl.PlayPauseCmd}"
                    Key="Space" />
        <KeyBinding Command="{x:Static local:MediaPlayerUserControl.SkipForwardCmd}"
                    Key="Right" />
        <KeyBinding Command="{x:Static local:MediaPlayerUserControl.SkipBackwardCmd}"
                    Key="Left" />
    </UserControl.InputBindings>

    <UserControl.Resources>
        <Style x:Key="ImageButton"
               TargetType="Button">
            <Setter Property="OverridesDefaultStyle"
                    Value="True" />
            <Setter Property="Margin"
                    Value="5,10,5,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border"
                                BorderThickness="0"
                                Background="Transparent"
                                Width="40"
                                Height="40"
                                Cursor="Hand">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed"
                                     Value="true">
                                <Setter Property="Cursor"
                                        Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid x:Name="mediaElementBackground">
            <MediaElement x:Name="player"
                          LoadedBehavior="Manual"
                          UnloadedBehavior="Manual"
                          ScrubbingEnabled="True"
                          Volume="1"
                          MediaEnded="Player_MediaEnded"
                          MediaOpened="Player_MediaOpened" />
        </Grid>

        <Grid x:Name="gridSettings"
              Grid.RowSpan="2"
              Width="250"
              VerticalAlignment="Bottom"
              HorizontalAlignment="Left"
              IsEnabled="False"
              Visibility="Hidden"
              Panel.ZIndex="1">
            <Grid.Background>
                <SolidColorBrush Color="#000000"
                                 Opacity=".8" />
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Label Content="Playback Speed:"
                   Foreground="White"
                   Margin="10,10,5,10" />
            <ComboBox x:Name="comboBoxPlaybackSpeed"
                      Grid.Column="1"
                      Height="25"
                      Margin="5,10,10,10"
                      VerticalAlignment="Top"
                      SelectionChanged="ComboBoxPlaybackSpeed_SelectionChanged">
                <ComboBoxItem Tag="0.25"
                              Content="0.25" />
                <ComboBoxItem Tag="0.5"
                              Content="0.5" />
                <ComboBoxItem Tag="0.75"
                              Content="0.75" />
                <ComboBoxItem Tag="1"
                              Content="Normal"
                              IsSelected="True" />
                <ComboBoxItem Tag="1.25"
                              Content="1.25" />
                <ComboBoxItem Tag="1.5"
                              Content="1.5" />
                <ComboBoxItem Tag="1.75"
                              Content="1.75" />
                <ComboBoxItem Tag="2"
                              Content="2" />
            </ComboBox>

            <Label Content="Loop:"
                   Foreground="White"
                   Margin="10,0,0,0"
                   Grid.Row="1" />
            <Grid Grid.Column="1"
                  Grid.Row="1"
                  Margin="5,10,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Grid.Resources>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Text"
                                Value="0:00" />
                        <Setter Property="HorizontalContentAlignment"
                                Value="Center" />
                        <Setter Property="VerticalContentAlignment"
                                Value="Center" />
                    </Style>
                </Grid.Resources>

                <TextBox x:Name="textBoxLoopStart"
                         Margin="0,0,5,5"
                         IsEnabled="False"
                         TextChanged="TextBoxLoop_TextChanged" />
                <TextBox x:Name="textBoxLoopEnd"
                         Grid.Column="1"
                         Margin="5,0,0,5"
                         IsEnabled="False"
                         TextChanged="TextBoxLoop_TextChanged" />

                <CheckBox x:Name="checkBoxLoopTime"
                          Content="Loop specific time"
                          Foreground="White"
                          Grid.Row="1"
                          Grid.ColumnSpan="2"
                          Height="20"
                          Margin="0,5,0,0"
                          IsEnabled="False"
                          Checked="CheckBoxLoopTime_Checked"
                          Unchecked="CheckBoxLoopTime_Unchecked" />
            </Grid>

            <CheckBox x:Name="checkBoxLoop"
                      Content="Loop Media"
                      Grid.Row="2"
                      Grid.Column="1"
                      VerticalContentAlignment="Center"
                      Foreground="White"
                      Margin="5,0,10,10"
                      Checked="CheckBoxLoop_Checked"
                      Unchecked="CheckBoxLoop_Unchecked" />
        </Grid>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    Margin="10,10,0,0"
                    HorizontalAlignment="Left">
            <Button x:Name="buttonSettings"
                Style="{StaticResource ImageButton}"
                Grid.Row="2"
                HorizontalAlignment="Left"
                Click="ButtonSettings_Click">
                <Image x:Name="imageSettings" />
            </Button>
            <TextBlock VerticalAlignment="Bottom"
                       Margin="10,0,0,5">
                <Hyperlink x:Name="hyperLinkResetLoop"
                           IsEnabled="False"
                           Click="HyperLinkResetLoop_Click">
                    Reset Loop
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    Grid.Row="2"
                    Orientation="Horizontal">
            <Button x:Name="buttonStop"
                    Style="{StaticResource ImageButton}"
                    IsEnabled="False"
                    Click="ButtonStop_Click">
                <Image x:Name="imageStop" />
            </Button>
            <Button x:Name="buttonPlayPause"
                    Style="{StaticResource ImageButton}"
                    IsEnabled="False"
                    Click="ButtonPlayPause_Click">
                <Image x:Name="imagePlayPause" />
            </Button>
            <Button x:Name="buttonOpen"
                    Style="{StaticResource ImageButton}"
                    Click="ButtonOpen_Click">
                <Image x:Name="imageOpen" />
            </Button>
        </StackPanel>

        <Button x:Name="buttonMuteUnmute"
                Style="{StaticResource ImageButton}"
                Grid.Row="2"
                Margin="0,10,10,0"
                HorizontalAlignment="Right"
                Click="ButtonMuteUnmute_Click">
            <Image x:Name="imageMuteUnmute" />
        </Button>

        <Grid Grid.Row="1"
              Margin="10,5,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="180" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <TextBlock x:Name="textBlockDuration"
                       Text="0:00 / 0:00"
                       VerticalAlignment="Center" />
            <Slider x:Name="sliderProgress"
                    Grid.Column="0"
                    Grid.Row="1"
                    IsMoveToPointEnabled="True"
                    IsSelectionRangeEnabled="True"
                    Margin="0,0,10,0"
                    TickPlacement="BottomRight"
                    IsEnabled="False"
                    ValueChanged="SliderProgress_ValueChanged"
                    PreviewMouseLeftButtonDown="SliderProgress_PreviewMouseLeftButtonDown"
                    PreviewMouseLeftButtonUp="SliderProgress_PreviewMouseLeftButtonUp"
                    PreviewMouseRightButtonUp="SliderProgress_PreviewMouseRightButtonUp"/>

            <TextBlock Text="Volume"
                       TextAlignment="Center"
                       Grid.Column="1"
                       VerticalAlignment="Center" />
            <Slider x:Name="sliderVolume"
                    Grid.Column="1"
                    Grid.Row="1"
                    Minimum="0"
                    Maximum="1"
                    Value="1"
                    IsMoveToPointEnabled="True"
                    TickPlacement="BottomRight"
                    TickFrequency=".04"
                    PreviewMouseLeftButtonDown="SliderVolume_PreviewMouseLeftButtonDown"
                    PreviewMouseLeftButtonUp="SliderVolume_PreviewMouseLeftButtonUp"
                    ValueChanged="SliderVolume_ValueChanged" />
        </Grid>
    </Grid>
</UserControl>
